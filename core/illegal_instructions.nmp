op DCP_ZEROPAGE(address_lo : card(8))
        syntax = format("DCP $%2x", address_lo)
        image = format("%8b %8b", 0xC7, address_lo)
        action = {
                let address: card(16) = 0;
                ZPG(address, address_lo);
