op ALR(value : card(8))
    syntax = format("ALR #%2x", value)
    image = format("%8b %8b", 0x4B, value)
    action = {
            IMMEDIATE();
            A = A & value;

            SR_C = A<0..0>;
            A = A >> 1;

            update_N(A);
            update_Z(A);

            cycle = cycle + 2;
    }

op ANC(value : card(8))
        syntax = format("ANC #%2x", value)
        image = format("%8b %8b", 0x0B, value)
        action = {
                IMMEDIATE();

                A = A & value;
                SR_C = A<7..7>;

                update_N(A);
                update_Z(A);

                cycle = cycle + 2;
        }

op ANC2(value : card(8))
        syntax = format("ANC2 #%2x", value)
        image = format("%8b %8b", 0x2B, value)
        action = {
                IMMEDIATE();

                A = A & value;
                SR_C = A<7..7>;

                update_N(A);
                update_Z(A);

                cycle = cycle + 2;
        }


op ARR(value : card(8))
        syntax = format("ARR #%2x", value)
        image = format("%8b %8b", 0x6B, value)
        action = {
                IMMEDIATE();

                A = A & value;
                A = (A >> 1);
                A<7..7> = SR_C;
                SR_C = A<6..6>;
                update_N(A);
                update_Z(A);
                SR_V = A<6..6> ^ A<5..5>;

                cycle = cycle + 2;
        }

op SBX(value : card(8))
        syntax = format("SBX #%2x", value)
        image = format("%8b %8b", 0xCB, value)
        action = {
                let res: card(16) = (A & X) - value;
                X = res<7..0>;
                update_N(X);
                update_Z(X);
                update_C(res);

                cycle = cycle + 2;
        }

