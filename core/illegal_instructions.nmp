op TAS(address_lo : card(8), address_hi : card(8))
        syntax = format("TAS $%2x%2x, Y", address_hi, address_lo)
        image = format("%8b %8b %8b", 0x9B, address_lo, address_hi)
        action = {
                let address: card(16) = 0;
                ABS_Y(address, address_lo, address_hi);
                
                SP = A & X;

                let value: card(8) = A & X & (((address + 1) & 0xFF00) >> 8);

                store(address, value);

                cycle = 5;
